{
  "name": "manage-landing-page",
  "version": "1.0.0",
  "private": true,
  "author": "Qusz",
  "license": "MIT",
  "scripts": {
    "sass-compile": "sass --no-source-map ./src/sass/main.scss:public/main.css",
    "serve": "wds --node-resolve --open \"/src/\"",
    "postbuild": "postcss \"public/main.css\" -u autoprefixer cssnano -r --no-map",
    "start": "npm-run-all -p compile prefixer serve",
    "watch:sass-compile": "sass --watch --no-source-map ./src/sass/main.scss:./src/main.css",
    "watch:serve": "wds --node-resolve --watch --open \"/src/\"",
    "watch:prefixer": "postcss './src/main.css' --use autoprefixer --no-map -o \"./src/main.css\" --watch",
    "start-watch": "npm-run-all -p watch:*",
    "public:html": "copyfiles -u 1 \"./src/*.html\" public",
    "public:js": "copyfiles -u 1 \"./src/*.js\" public",
    "public:assets": "copyfiles -u 1 \"./src/assets/**/*\" public",
    "public": "npm-run-all --parallel public:*",
    "build": "npm-run-all public sass-compile postbuild"

  },
  "dependencies": {
    "swiper": "^8.4.3"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.34",
    "autoprefixer": "^10.4.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "sass": "^1.55.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14"
  }
}
